{% extends "baseSupAd.html.twig" %}

{% block stylesheets %} {{  parent() }} {% endblock %}

{% block title %} {{  parent() }} {% endblock %}


{% block body %}

<div class="row">
                    <div class="col-lg-12">
                        <div class="white-box">
                            <h3 class="box-title">Liste des localites</h3>
                            <p class="text-muted">Appuyer sur le bouton en b pour modifier une localite et sur le rouge pour la supprimer</p>
                            <table class="table table-striped table-bordered" id="editable-datatable">
                                <thead>
                                    <tr>
                                        <th>Nom de la localite</th>
                                        <th>ville</th>
                                        <th>prefecture</th>
                                        <th>region</th>
                                        <th>canton</th>
                                        <th>Action</th>

                                        
                                    </tr>
                                </thead>
                                <tbody>
                                {% for localite in localites %}
                                    <tr id="1" class="gradeX">
                                        <td>{{localite.nom}}</td>
                                        <td>{{localite.ville}} </td>
                                        <td>{{localite.prefecture}}</td>
                                        <td>{{localite.region}}</td>
                                        <td class="center">{{localite.canton}}</td>

                                        <td>
                                        
                                        <div class="btn-group m-r-10">
                                           <button aria-expanded="false" data-toggle="dropdown" class="btn btn-info dropdown-toggle waves-effect waves-light" type="button">derouler <span class="caret"></span></button>
                                    <ul role="menu" class="dropdown-menu animated flipInX">
                                        <li><a href="/localite/modif/{{localite.id}}">Modifier</a></li>
                                        <li><a href="/localite/suppr/{{localite.id}}" onclick="return confirm('Etes vous sure de vouloir supprimer cette localite?');">Supprimer</a></li>
                                       
                                    </ul>
                                     
                                      </div>
                                       

                                        </td>
                                        
                                    </tr>
                                   {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Nom de la localite</th>
                                        <th>ville</th>
                                        <th>prefecture</th>
                                        <th>region</th>
                                        <th>canton</th>
                                        <th>Action</th>

                                    </tr>
                                </tfoot>
                            </table>
 <a href="{{ path('app_localiteListe_imprimer') }}"><button id="print" class="btn btn-default btn-outline" type="button"> <span><i class="fa fa-print"></i> Print</span> </button></a>
                        </div>
                    </div>
                   
                </div>
  
  

{% endblock %}
{% block javascript %} {{  parent() }} {% endblock %}

