                     <div class="white-box">

{{ form_start(form,{'attr':{'class':'form-horizontal form-material'}}) }}

        <a href="javascript:void(0)" class="text-center db"><img src="{{ asset('optimum/logo.png')}}" alt="Home" /></a> 
        <h3 class="box-title m-t-40 m-b-0">Rechercher un electeur</h3><small>Entrer les informations de l'electeur</small> 

        <div class="form-group m-t-20">
          <div class="col-xs-12">
              
