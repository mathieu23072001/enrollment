 {% extends "baseSupAd.html.twig" %}

{% block stylesheets %} {{  parent() }} {% endblock %}

{% block title %} {{  parent() }} {% endblock %}


{% block body %}


  <div class="row">
                    <div class="col-lg-12">
                        <div class="white-box">
                            <h3 class="box-title">Liste des contentieux</h3>
                            <p class="text-muted">Appuyer sur radier pour desactive un electeur</p>
                            <table class="table table-striped table-bordered" id="">
                                <thead>
                                    <tr>
                                        <th>photo de l'electeur </th>
                                        <th>numero de carte </th>
                                        <th>nom de l'electeur </th>
                                        <th>prenom de l'electeur </th>

                                        
                                        <th>sexe de l'electeur</th >
                                        
                                    
                                        <th>nom du plaignant</th>
                                        <th>prenom du plaignant</th>
                                        
                                       
                                        <th>Descriptif du contentieux</th>
                                        <th>Date d'enregistrement</th>
                                        <th>Etat</th>
                                        <th>Action</th>
                                        
                                    
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                {% for contentieux in contentieux %}
                                 
                                    <tr id="1" class="gradeX">
                                        <td><img src="{{asset('images/electeurs/' ~ contentieux.electeur.image)}}" alt="" width="80" height="80"></td>
                                        <td>{{contentieux.electeur.carteElec.numeroCarte}} </td>
                                        <td>{{contentieux.electeur.nom}} </td>
                                        <td>{{contentieux.electeur.prenom}} </td>
                                        
                                        <td class="center">{{contentieux.electeur.sexe}}</td>
                                        
                                        
                                        <td>{{contentieux.nomPlaignant}}</td>
                                         <td>{{contentieux.prenomPlaignant}}</td>
                                        
                                     
                                     <td class="center">{{contentieux.descriptionPlainte}}</td>
                                     <td>{{contentieux.creatAt|date("Y-m-d  H:i:s")}}</td>
                                        
                                      <td> 

                              
                                      {% if contentieux.electeur.rad  %} 
                                         <button type="button" class="btn btn-warning">Non</button>
                                         {% else  %}
                                         <button type="button" class="btn btn-success">Oui</button>
                                            {% endif %}
                                        </td>
                                      {% if contentieux.electeur.rad == 1  %}
                                      <td><a href="{{ path('app_radiation_index',{'id': contentieux.electeur.id}) }}"><button type="button" class="btn btn-danger">Radier</button></a></td>  
                                        {% endif %}
                                        
                                    </tr>
                                     
                                   {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr>
                                       <th>photo de l'electeur </th>
                                        <th>numero de carte </th>
                                        <th>nom de l'electeur </th>
                                        <th>prenom de l'electeur </th>

                                        
                                        <th>sexe de l'electeur</th >
                                        
                                    
                                        <th>nom du plaignant</th>
                                        <th>prenom du plaignant</th>
                                        
                                       
                                        <th>Descriptif du contentieux</th>
                                        <th>Date d'enregistrement</th>
                                        <th>Etat</th>
                                        <th>Action</th>
                                        
                                        
                                        
                                        
                                       
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /.row -->




{% endblock %}

{% block javascript %} {{  parent() }} {% endblock %}
