{% extends "baseSupAd.html.twig" %}

{% block stylesheets %} {{  parent() }} {% endblock %}

{% block title %} {{  parent() }} {% endblock %}


{% block body %}

  

  <div class="row">
                    <div class="col-lg-12">
                        <div class="white-box">
                            <h3 class="box-title">Liste globale des electeurs</h3>
                            <p class="text-muted">Just click on word which you want to change and enter</p>
                            <table class="table table-striped table-bordered" id="">
                                <thead>
                                    <tr>
                                      <th>photo </th>
                                      <th>Numero de carte </th>
                                        <th>Nom </th>
                                        <th>Prenom </th>
                                        
                                        
                                        
                                    
                                        <th>Profession</th>
                                        <th>Adresse</th>
                                        <th>Date d'inscription</th>
                                        <th>Sexe</th>
                                        <th>Bureaux de vote</th>
                                        
                                        <th>Action</th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                {% for electeur in electeurs %}
                                 
                                
                                 {% if electeur.rad == 1  %}
                                    <tr id="1" class="gradeX">
                                         <td> <img src="{{asset('images/electeurs/' ~ electeur.image)}}" alt="" width="80" height="80"></td>
                                         <td>{{electeur.carteElec.numeroCarte}}</td>
                                        <td>{{electeur.nom}}</td>
                                        <td>{{electeur.prenom}} </td>
                                        
                                        
                                        
                                        
                                        <td>{{electeur.profession}}</td>
                                         <td>{{electeur.adresse}}</td>
                                        <td>{{electeur.dateInscription|date("Y-m-d  H:i:s")}}</td>
                                     <td class="center">{{electeur.sexe}}</td>
                                        <td class="center">{{electeur.crv.nom}}</td>

                                        
                                        <td> 
                                         <div class="btn-group m-r-10">
                                           <button aria-expanded="false" data-toggle="dropdown" class="btn btn-info dropdown-toggle waves-effect waves-light" type="button">derouler <span class="caret"></span></button>
                                    <ul role="menu" class="dropdown-menu animated flipInX">
                                        <li><a href="{{ path('app_elec_details',{'id': electeur.id}) }}">Afficher details</a></li>
                                       
                                    </ul>
                                     
                                      </div>
                                        </td>
                                        
                                    </tr>
                                     {% else %}
                                     <h3 class="box-title">Aucun electeurs inscrits ou electeurs radiers</h3>
                                     {% endif %}
                                     {% endfor %} 
                                   
                                </tbody>
                                <tfoot>
                                    <tr>
                                      <th>photo </th>
                                      <th>Numero de carte </th>
                                    <th>Nom </th>
                                        <th>Prenom </th>
                                        
                                        
                                        
                                    
                                        <th>Profession</th>
                                        <th>Adresse</th>
                                        <th>Date d'inscription</th>
                                        <th>Sexe</th>
                                        <th>Bureaux de vote</th>
                                        
                                        <th>Action</th>
                                       
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /.row -->


 

{% endblock %}

{% block javascript %} {{  parent() }} {% endblock %}
